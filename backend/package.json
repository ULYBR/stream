{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "your-team",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --webpack",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/index",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "sls:dev": "sls offline start --reloadHandler | pino-pretty",
    "prepare": "chmod +x scripts/setup-localstack-pro.sh && npm run infra:destroy && ./scripts/setup-localstack-pro.sh",
    "infra:full": "chmod +x scripts/setup-localstack-pro.sh && ./scripts/setup-localstack-pro.sh",
    "infra:destroy": "cd ../terraform && terraform destroy -var='environment=dev' -var='localstack_endpoint=http://localhost:4566' -auto-approve",
    "dev:full": "npm run prepare && npm run start:dev"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.864.0",
    "@aws-sdk/client-s3": "^3.899.0",
    "@aws-sdk/client-sqs": "^3.899.0",
    "@aws-sdk/util-dynamodb": "^3.864.0",
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^5.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.4.0",
    "axios-mock-adapter": "^1.21.5",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.7.1",
    "nestjs": "^0.0.1",
    "nestjs-pino": "^4.4.0",
    "pino": "^8.14.2",
    "pino-http": "^10.5.0",
    "redis": "^5.8.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^6.0.1",
    "rxjs": "^7.2.0",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.0",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "faker-br": "^0.4.1",
    "jest": "^29.7.0",
    "nock": "^13.4.0",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.20",
    "supertest": "^7.1.4",
    "terser-webpack-plugin": "^5.3.9",
    "testcontainers": "^10.8.1",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "verbose": true,
    "coverageProvider": "v8",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "test",
      "src"
    ],
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
      "./src/config/env.config.ts"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.(t|j)s",
      "!**/*.dto.(t|j)s",
      "!**/*.type.(t|j)s",
      "!**/*.pipe.(t|j)s",
      "!**/*.fixture.(t|j)s",
      "!**/index.ts",
      "!**/*.middleware.(t|j)s",
      "!**/*config/**/*",
      "!**/*utils/**/*",
      "!**/*parser/**/*",
      "!**/*mappers/**/*",
      "!**/*decorators/**/*",
      "!**/*types/**/*",
      "!**/*.interface.(t|j)s",
      "!**/*.parser.(t|j)s"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@test/(.*)$": "<rootDir>/test/$1"
    }
  },
  "engines": {
    "npm": ">=9.5.1",
    "node": ">=22.18.0"
  }
}